        <div id = "container" class="wrapper fadeInDown">
			<div id="formContent">
                    <form action="/register" method="POST">
                        <h3>Fill in the details to get yourself registered</h3>
                        <label for="USERNAME">Username:</label>
                        <!-- <input type="email" id="USERNAME" name="login" placeholder="login" required> -->
                        <input type="email" id="USERNAME" placeholder="enter valid email id" required name="username"><br>
                        <label for="PASSWORD">Password:</label>
                        <!-- <input type="password" id="PASSWORD" name="login" placeholder="password" required> -->
                        <input type="password" id="PASSWORD" placeholder="password which you would remember" required name="password"><br>
                        <input type="checkbox" onclick="myFunction()"><span>Show Password</span><br>
                        <label for="P.NO">Phone Number:</label>
                        <input type="text" id="P.NO" placeholder="existing phone number" required name="phoneNumber"><br>
                        <label for="ADDRESS">Address:</label>
                        <input type="address" id="ADDRESS" placeholder="valid address" required name="adress"><br>
                        <label for="BALANCE">Initial Deposit:</label>
                        <input type="balance" id="BALANCE" placeholder="initial amount" required name="amount"><br>
                        <input type="checkbox" id="AGREE" required>
                        <label for="AGREE" id="agree">I agree to all the terms and conditions</label><br>
                        <input type="submit" value="Submit">
                    </form>
            </div>
